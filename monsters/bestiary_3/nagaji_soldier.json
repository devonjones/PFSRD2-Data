        {
            "name": "Nagaji",
            "type": "section",
            "sections": [
                {
                    "name": "Nagajor",
                    "type": "section",
                    "sources": [
                        {
                            "type": "source",
                            "name": "Bestiary 3",
                            "link": {
                                "type": "link",
                                "name": "Bestiary 3 pg. 182",
                                "alt": "Bestiary 3 pg. 182",
                                "href": "https://paizo.com/products/btq024xj"
