{
    "name": "Flumph",
    "type": "creature",
    "sections": [
        {
            "name": "Flumph",
            "type": "section",
            "sources": [
                {
                    "type": "source",
                    "name": "Bestiary 3",
                    "link": {
                        "type": "link",
                        "name": "Bestiary 3 pg. 100",
                        "alt": "Bestiary 3 pg. 100",
