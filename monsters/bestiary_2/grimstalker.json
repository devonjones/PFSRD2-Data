{
    "name": "Grimstalker",
    "type": "creature",
    "sections": [
        {
            "name": "Grimstalker",
            "type": "section",
            "sources": [
                {
                    "type": "source",
                    "name": "Bestiary 2",
                    "link": {
                        "type": "link",
                        "name": "Bestiary 2 pg. 137",
                        "alt": "Bestiary 2 pg. 137",
                        "href": "https://paizo.com/products/btq022yq"
                    },
                    "page": 137,
                    "errata": {
                        "type": "link",
