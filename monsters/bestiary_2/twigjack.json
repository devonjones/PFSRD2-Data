{
    "name": "Twigjack",
    "type": "creature",
    "sections": [
        {
            "name": "Twigjack",
            "type": "section",
            "sources": [
                {
                    "type": "source",
                    "name": "Bestiary 2",
                    "link": {
                        "type": "link",
                        "name": "Bestiary 2 pg. 270",
                        "alt": "Bestiary 2 pg. 270",
                        "href": "https://paizo.com/products/btq022yq"
