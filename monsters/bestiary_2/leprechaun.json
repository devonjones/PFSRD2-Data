{
    "name": "Leprechaun",
    "type": "creature",
    "sections": [
        {
            "name": "Leprechaun",
            "type": "section",
            "sources": [
                {
                    "type": "source",
                    "name": "Bestiary 2",
                    "link": {
                        "type": "link",
