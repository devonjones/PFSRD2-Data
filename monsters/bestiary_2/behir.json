{
    "name": "Behir",
    "type": "creature",
    "sections": [
        {
            "name": "Behir",
            "type": "section",
            "sources": [
                {
                    "type": "source",
                    "name": "Bestiary 2",
                    "link": {
                        "type": "link",
                        "name": "Bestiary 2 pg. 38",
                        "alt": "Bestiary 2 pg. 38",
