{
    "name": "Ugvashi",
    "type": "creature",
    "sections": [
        {
            "name": "Ugvashi",
            "type": "section",
            "sources": [
                {
                    "type": "source",
                    "name": "Impossible Lands",
                    "link": {
                        "type": "link",
                        "name": "Impossible Lands pg. 339",
                        "alt": "Impossible Lands pg. 339",
