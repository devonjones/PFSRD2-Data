    "sections": [
        {
            "name": "Guard Dog",
            "type": "section",
            "sources": [
                {
                    "type": "source",
                    "name": "Bestiary",
                    "link": {
                        "type": "link",
                        "name": "Bestiary pg. 102",
                        "alt": "Bestiary pg. 102",
