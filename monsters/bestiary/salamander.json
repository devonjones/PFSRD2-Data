            "sources": [
                {
                    "type": "source",
                    "name": "Bestiary",
                    "link": {
                        "type": "link",
                        "name": "Bestiary pg. 148",
                        "alt": "Bestiary pg. 148",
                        "href": "https://paizo.com/products/btq01y0m?Pathfinder-Bestiary"
                    },
                    "page": 148
                }
            ],
            "html": "Fire elementals are destructive manifestations of the scorching Plane of Fire."
        }
