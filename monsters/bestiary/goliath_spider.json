{
    "name": "Goliath Spider",
    "type": "creature",
    "sections": [
        {
            "name": "Goliath Spider",
            "type": "section",
            "sources": [
                {
                    "type": "source",
                    "name": "Bestiary",
                    "link": {
                        "type": "link",
                        "name": "Bestiary pg. 307",
                        "alt": "Bestiary pg. 307",
                        "href": "https://paizo.com/products/btq01y0m?Pathfinder-Bestiary"
