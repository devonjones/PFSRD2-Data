    "type": "creature",
    "sections": [
        {
            "name": "Catfolk Pouncer",
            "type": "section",
            "text": "Catfolk pouncers travel the world in search of new experiences.<br/><br/><b><u><a aonid=\"5\" game-obj=\"Skills\" general=\"true\">Recall Knowledge - Humanoid</a></u> (<u><a aonid=\"14\" game-obj=\"Skills\">Society</a></u>)</b>: DC 15",
            "sources": [
                {
                    "type": "source",
                    "name": "Bestiary",
                    "link": {
                        "type": "link",
                        "name": "Bestiary pg. 54",
                        "alt": "Bestiary pg. 54",
